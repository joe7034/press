<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.jhta.springboot10.dao.PressDAO">
	<select id="getAll" resultType="PressDTO">
		select * from press_info
	</select>
	<select id="selectOne" parameterType="String" resultType="speakerDTO">
		select * from speaker_list
		where party like CONCAT('%',#{party},'%')
		<choose>
			<when test ="name !=''">
				and name like #{name}
			</when>
			<when test ="name !='' and from_date !=''">

			</when>
			<otherwise>
				
			</otherwise>
		</choose>
	</select>



</mapper>